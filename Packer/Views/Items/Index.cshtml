@using Packer.Models;

<h1>Packer List</h1>
<ul>
  @if (Model.Count == 0)
  {
    <p>There are no items in the list.</p>
  }
    @foreach (Item item in Model)
    {
      <ul>
        <li><em>@item.Name</em></li>
        <li>Purchased?: @item.Purchased</li>
        <li>Packed?: @item.Packed</li>
        <li>Price: @item.Price</li>
        <li>Source: @item.Source</li>
      </ul>
    }
</ul>

<a href="/items/new">Add a new item.</a>