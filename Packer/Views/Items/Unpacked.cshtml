@using Packer.Models;

<h1> Items That Need to be Packed</h1>
<ul>
  @if (Model.Count == 0)
  {
    <p>There are no unpacked items in the list.</p>
  }
    @foreach (Item item in Model)
    {
      <p>
        <ul>
          <li><a href="/items/@item.Id">@item.Name</a></li>
        </ul>
      </p>
    }
</ul>

<a href="/items/new">Add a new item.</a>
<a href="/items">View all items</a>

<form action="/items/delete" method="post">
  <button type="submit" name="button" class="btn btn dark">Clear the list</button>
</form>